<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

     <TextView
      android:hint="GESTIÓN DE PECES"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:id="@+id/textView1" />

    <EditText
        android:hint="ID(campo identity no ingresar)"
        android:inputType="number"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40.5dp"
        android:layout_marginTop="25dip"
        android:id="@+id/txtIdPes"
        android:layout_marginBottom="0.0dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtNombrePes"
        android:hint="NOMBRE DEL PEZ"
        android:gravity="center"/>

    <EditText
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/txtCedulaDueño"
       android:hint="CEDULA DEL DUEÑO"
       android:gravity="center"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtEdadPes"
        android:hint="EDAD DEL PEZ"
        android:gravity="center"/>

     <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/txtEspeciePes"
      android:hint="ESPECIE DEL PEZ"
      android:gravity="center"/>

    <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/txtRazaPes"
      android:hint="RAZA DEL PEZ"
      android:gravity="center"/>

    <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/txtCaracteristicasPes"
      android:hint="CARACTERISTICAS DEL PEZ"
      android:gravity="center" />

     <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/txtPesoPes"
      android:hint="PESO DEL PEZ"
      android:gravity="center" />

    <Button
       android:text="REGISTRAR PEZ"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:backgroundTint="@android:color/holo_purple"
       android:textColor="@android:color/white"
       android:id="@+id/btnRegistrar" />

    <Button
       android:text="CONSULTAR PEZ"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:backgroundTint="@android:color/holo_purple"
       android:textColor="@android:color/white"
       android:id="@+id/btnConsultarPes" />
    <Button
       android:text="INICIO DE LA APP"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:backgroundTint="@android:color/holo_purple"
       android:textColor="@android:color/white"
       android:id="@+id/btnIrInicio" />
   

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

     <TextView
      android:text="GESTIÓN DE GATOS"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:id="@+id/textView1" />

       <EditText
        android:hint="ID(campo identity no ingresar)"
        android:inputType="number"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_marginTop="25dip"
        android:id="@+id/txtIdGato"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtNombreGato"
        android:hint="NOMBRE DEL GATO"
        android:gravity="center"/>

    <EditText
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/txtCedulaDueño"
       android:hint="CEDULA DEL DUEÑO"
       android:gravity="center"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtEdadGato"
        android:hint="EDAD DEL GATO"
        android:gravity="center"/>

     <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/txtEspecieGato"
      android:hint="ESPECIE DEL GATO"
      android:gravity="center"/>

    <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/txtRazaGato"
      android:hint="RAZA DEL GATO"
      android:gravity="center"/>

    <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/txtCaracteristicasGato"
      android:hint="CARACTERISTICAS DEL GATO"
      android:gravity="center" />

     <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/txtPesoGato"
      android:hint="PESO DEL GATO"
      android:gravity="center" />

    <Button
       android:text="REGISTRAR GATO"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:backgroundTint="@android:color/holo_purple"
       android:textColor="@android:color/white"
       android:id="@+id/btnRegistrar" />
   

</LinearLayout>
